<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gatunes.vustrip" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VUStrip</name>
    <description>VUStrip mobile client</description>
    <author email="dani@gatunes.com" href="https://dani.gatunes.com">Daniel Esteban Nombela</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <plugin name="cordova-plugin-vumeter" spec="https://github.com/danielesteban/cordova-plugin-vumeter.git" />
    <engine name="android" spec="^7.1.4" />
</widget>
